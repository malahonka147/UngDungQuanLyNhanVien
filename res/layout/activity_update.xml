<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.qlnhanvien.UpdateActivity" >

    <Button
        android:id="@+id/btnChupHinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imgHinhDaiDien"
        android:layout_marginRight="30dp"
        android:text="CHỤP HÌNH" />

    <Button
        android:id="@+id/btnChonHinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnChupHinh"
        android:layout_below="@+id/btnChupHinh"
        android:layout_marginTop="16dp"
        android:text="CHỌN HÌNH" />

    <ImageView
        android:id="@+id/imgHinhDaiDien"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/abc_ab_bottom_solid_dark_holo" />

    <EditText
        android:id="@+id/edtTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edtSdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtTen"
        android:layout_below="@+id/edtTen"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:id="@+id/btnHuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnChonHinh"
        android:layout_alignRight="@+id/btnChonHinh"
        android:layout_below="@+id/edtSdt"
        android:layout_marginTop="36dp"
        android:text="Hủy" />

    <Button
        android:id="@+id/btnLuuPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnHuy"
        android:layout_alignBottom="@+id/btnHuy"
        android:layout_alignLeft="@+id/imgHinhDaiDien"
        android:layout_alignRight="@+id/imgHinhDaiDien"
        android:text="Lưu" />

    <TextView
        android:id="@+id/txtTenPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtSdt"
        android:layout_alignLeft="@+id/btnLuuPB"
        android:layout_alignTop="@+id/edtTen"
        android:layout_toLeftOf="@+id/edtTen"
        android:text="Họ tên:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edtSdt"
        android:layout_alignLeft="@+id/btnLuuPB"
        android:layout_alignTop="@+id/edtSdt"
        android:text="SDT:"
        android:textSize="20sp" />

</RelativeLayout>