<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.qlnhanvien.PhongBanActivity"
    android:background="@drawable/background" >

     <ListView
         android:id="@+id/listViewPB"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/btnAddPB"
         android:layout_below="@+id/textView1"
         android:layout_centerHorizontal="true" >

    </ListView>

     <Button
         android:id="@+id/btnAddPB"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_alignRight="@+id/listViewPB"
         android:text="Thêm Phòng Ban"
         android:background="#c82e31"
         android:textColor="#ffff"/>

     <TextView
         android:id="@+id/textView1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/listViewPB"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:background="#c82e31"
         android:text="Danh sách phòng ban:"
         android:textSize="20sp"
         android:textColor="#ffff" />

</RelativeLayout>
